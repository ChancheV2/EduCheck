@model EvaluacionesEscolares.Web.ViewModels.CalificacionViewModel
@{
    ViewData["Title"] = "Editar Calificación";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Editar Calificación</h1>
    <div>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
            <i class="bi bi-eye"></i> Detalles
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="EstudianteId" class="control-label">Estudiante</label>
                        <select asp-for="EstudianteId" class="form-select" asp-items="ViewBag.Estudiantes">
                            <option value="">-- Seleccione un estudiante --</option>
                        </select>
                        <span asp-validation-for="EstudianteId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="ExamenId" class="control-label">Examen</label>
                        <select asp-for="ExamenId" class="form-select" asp-items="ViewBag.Examenes">
                            <option value="">-- Seleccione un examen --</option>
                        </select>
                        <span asp-validation-for="ExamenId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Nota" class="control-label"></label>
                <div class="input-group">
                    <input asp-for="Nota" class="form-control" type="number" step="0.01" min="0" max="100" />
                    <span class="input-group-text">/100</span>
                </div>
                <span asp-validation-for="Nota" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Comentarios" class="control-label"></label>
                <textarea asp-for="Comentarios" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Comentarios" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Guardar
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}