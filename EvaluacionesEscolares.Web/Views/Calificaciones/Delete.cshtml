@model EvaluacionesEscolares.Web.ViewModels.CalificacionViewModel
@{
    ViewData["Title"] = "Eliminar Calificación";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Eliminar Calificación</h1>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Volver
    </a>
</div>

<div class="alert alert-danger">
    <h4>¿Está seguro que desea eliminar esta calificación?</h4>
    <p>Esta acción no se puede deshacer.</p>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.EstudianteNombre)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.EstudianteNombre)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ExamenTitulo)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.ExamenTitulo)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.MateriaNombre)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.MateriaNombre)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nota)</dt>
            <dd class="col-sm-9">
                <span class="badge @(Model.Nota >= 70 ? "bg-success" : (Model.Nota >= 60 ? "bg-warning" : "bg-danger"))">
                    @Model.Nota.ToString("N2")
                </span>
            </dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FechaRegistro)</dt>
            <dd class="col-sm-9">@Model.FechaRegistro.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Comentarios)</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.Comentarios))
                {
                    @Html.DisplayFor(model => model.Comentarios)
                }
                else
                {
                    <span class="text-muted">Sin comentarios</span>
                }
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Eliminar
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-x-circle"></i> Cancelar
            </a>
        </form>
    </div>
</div>