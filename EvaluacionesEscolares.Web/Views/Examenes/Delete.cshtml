@model EvaluacionesEscolares.Web.ViewModels.ExamenViewModel
@{
    ViewData["Title"] = "Eliminar Examen";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Eliminar Examen</h1>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Volver
    </a>
</div>

<div class="alert alert-danger">
    <h4>¿Está seguro que desea eliminar este examen?</h4>
    <p>Esta acción no se puede deshacer y eliminará todas las preguntas, opciones y calificaciones asociadas.</p>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Titulo)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Titulo)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Descripcion)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Descripcion)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Duracion)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Duracion) minutos</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.MateriaNombre)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.MateriaNombre)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FechaCreacion)</dt>
            <dd class="col-sm-9">@Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Eliminar
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-x-circle"></i> Cancelar
            </a>
        </form>
    </div>
</div>